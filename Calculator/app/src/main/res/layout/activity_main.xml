<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/BigGreenBox"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_weight="2"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" > 
        </EditText>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BigBlueBox"
        android:background="@color/black"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
         >
        
        <LinearLayout
        android:id="@+id/OrangeBox1"
        android:background="@color/black"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/calculatorstyle1"
            android:layout_margin="2dp"
            android:text="sin" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/calculatorstyle1"
            android:layout_margin="2dp"
            android:text="cos" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/calculatorstyle1"
            android:layout_margin="2dp"
            android:text="tan" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/calculatorstyle1"
            android:layout_margin="2dp"
            android:text="π" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/calculatorstyle1"
            android:layout_margin="2dp"
            android:text="!" />
        </LinearLayout>
        
        <LinearLayout
        android:id="@+id/OrangeBox2"
        android:background="@color/black"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="3dp" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle1"
            android:text="ln" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle1"
            android:text="log" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle1"
            android:text="e" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle1"
            android:text="^" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle1"
            android:text="√" />
        </LinearLayout>
        
        <LinearLayout
        android:id="@+id/BlackBox"
        android:background="@color/black"
        android:layout_weight="15"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
           <LinearLayout
        	android:id="@+id/GreenBox1"
	        android:background="@color/black"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:orientation="horizontal" >
	        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="7" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="8" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="9" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text="÷" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text="(" />
	        </LinearLayout>
	        
           <LinearLayout
        	android:id="@+id/GreenBox2"
	        android:background="@color/black"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:orientation="horizontal" >
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="4" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="5" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="6" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text="x" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text=")" />
	        </LinearLayout>
	        
           <LinearLayout
        	android:id="@+id/BlueBox"
	        android:background="@color/black"
	        android:layout_weight="2"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:orientation="horizontal"
	        android:layout_marginLeft="2dp" >
        	
               <LinearLayout
        	android:id="@+id/RedBox"
	        android:background="@color/black"
	        android:layout_weight="4"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical" > 
	        
                   <LinearLayout
        	android:id="@+id/GreenBox3"
	        android:background="@color/black"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:orientation="horizontal" > 
	        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="1" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="2" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="3" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text="-" />
	        </LinearLayout>
	        
                   <LinearLayout
        	android:id="@+id/GreenBox4"
	        android:background="@color/black"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:orientation="horizontal" >
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="0" />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle3"
            android:text="." />
        	<Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text="+" />  
	        </LinearLayout>
	        
	        </LinearLayout>
	        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="@style/calculatorstyle2"
            android:text="=" />
	        
	        </LinearLayout>
	        
           
        </LinearLayout>
    </LinearLayout>

</LinearLayout>